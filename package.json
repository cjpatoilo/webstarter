{
	"name": "website-starter",
	"version": "0.0.0",
	"description": "A super simple boilerplate project for websites.",
	"homepage": "http://websiteboilerplate.com",
	"repository": "cjpatoilo/website-starter",
	"license": "MIT",
	"author": "CJ Patoilo <cjpatoilo@gmail.com>",
	"private": "true",
	"engines": {
		"node": ">=4"
	},
	"dependencies": {
		"milligram": "latest",
		"opbeat-js": "latest"
	},
	"devDependencies": {
		"babel-cli": "^6.18.0",
		"babel-preset-airbnb": "^2.1.1",
		"bower": "^1.8.0",
		"browser-sync": "^2.18.1",
		"cname": "^0.0.2",
		"cssnano-cli": "^1.0.5",
		"editorconfig-tools": "^0.1.1",
		"eslint": "^3.10.2",
		"eslint-config-styled": "0.0.0",
		"gh-pages": "^0.11.0",
		"husky": "^0.11.9",
		"imagemin-cli": "^3.0.0",
		"mkdirp": "^0.5.1",
		"ncp": "^2.0.0",
		"node-sass": "^3.13.0",
		"npm-run-all": "^3.1.1",
		"onchange": "^3.0.2",
		"pug-cli": "^1.0.0-alpha6",
		"rimraf": "^2.5.4",
		"sass-lint": "^1.10.2",
		"svg-sprite-generator": "^0.0.7",
		"svgo": "^0.6.6",
		"uglify-js": "^2.7.5"
	},
	"scripts": {
		"serve": "browser-sync --no-notify start -s dist -f dist",
		"start": "run-s build watch",
		"build": "run-s clean build:misc build:fonts build:templates build:styles build:scripts build:images build:bower",
		"build:misc": "cname dist && ncp src/manifest.json dist/manifest.json",
		"build:fonts": "run-s fonts",
		"build:templates": "run-s pug",
		"build:styles": "run-s sass cssnano",
		"build:scripts": "run-s babel uglify",
		"build:images": "run-s imagemin svgo",
		"build:bower": "ncp bower_components dist/lib",
		"watch": "run-p watch:templates watch:styles watch:scripts watch:images watch:bower serve",
		"watch:fonts": "onchange 'src/fonts' -- npm run build:fonts",
		"watch:templates": "onchange 'src/**/*.pug' -- npm run build:templates",
		"watch:styles": "onchange 'src/styles' -- npm run build:styles",
		"watch:scripts": "onchange 'src/scripts' -- npm run build:scripts",
		"watch:images": "onchange 'src/images' -- npm run build:images",
		"watch:bower": "onchange 'bower_components' -- npm run build:bower",
		"test": "run-p build eslint sass-lint editorconfig",
		"clean": "rimraf dist && mkdirp dist/scripts && mkdirp dist/styles && mkdirp dist/images && mkdirp dist/fonts",
		"fonts": "ncp src/fonts dist/fonts",
		"pug": "pug src -o dist",
		"sass": "node-sass src/styles/main.sass dist/styles/main.min.css",
		"cssnano": "cssnano dist/styles/main.min.css dist/styles/main.min.css",
		"babel": "babel src/scripts --out-file dist/scripts/main.min.js --presets=airbnb --source-maps --no-babelrc",
		"uglify": "uglifyjs dist/scripts/main.min.js -c -m -o dist/scripts/main.min.js",
		"imagemin": "imagemin src/images/* -o dist/images",
		"svgo": "svgo -f src/images/icons && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
		"sass-lint": "sass-lint -c .sasslintrc src/styles/*.sass --verbose --no-exit",
		"eslint": "eslint . --ignore-path .gitignore",
		"editorconfig": "editorconfig-tools check .",
		"gh-pages": "gh-pages -d dist -b gh-pages",
		"prepush": "run-s gh-pages",
		"precommit": "npm test",
		"prestart": "npm install",
		"pretest": "npm install",
		"postinstall": "bower install"
	}
}
